		 	steps {
				checkout scm
			}
		 }
		 stage('Run Compose') {
			agent {
                label Podman.AGENT_LABEL_APP
            }
		 	steps {
				sh 'pwd'
				sh 'dir'
				sh 'podman build --file=Dockerfile_Polaris .'
			}
		 }
    }
